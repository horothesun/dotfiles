{
  "diagnostic.errorSign": "✘",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "diagnostic.enableHighlightLineNumber": true,
  "codeLens.enable": true,
  "signature.enable": true,
  "suggest.noselect": false,
  "suggest.floatEnable": true,
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.formatOnSaveFiletypes": ["scala"],
  "coc.preferences.formatOnType": false,
  "metals.showImplicitArguments": true,
  "metals.scalafmtConfigPath": ".scalafmt.conf",
  "metals.showInferredType": true,
  "metals.superMethodLensesEnabled": true,
  "suggest.enablePreview": true,
  "signature.target": "float",

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {}
    },
    "unison": {
      "filetypes": ["u", "unison"],
      "host": "127.0.0.1",
      "port": 5757,
      "settings": {}
    }
  }
}
