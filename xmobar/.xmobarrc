Config
  { overrideRedirect = False
  , font       = "xft:FiraMono Nerd Font:pixelsize=18:antialias=true:hinting=true"
  , bgColor    = "#202020"
  , fgColor    = "#f8f8f2"
  , position   = TopW L 100
  , persistent = False
  , commands = [ Run StdinReader
               , Run Cpu
                   [ "-L", "3"
                   , "-H", "50"
                   , "--high"  , "red"
                   , "--normal", "green"
                   ] 10
               , Run Memory ["--template", "Mem <usedratio>%"] 10
               , Run Swap ["--template", "Swap <usedratio>%"] 10
               , Run Alsa "default" "Master"
                   [ "--template", "<volumestatus>"
                   , "--suffix"  , "True"
                   , "--"
                   , "--on", ""
                   ]
               , Run CoreTemp
                   [ "--template" , "<core0><fc=#aaaaaa>󰔄</fc>"
                   , "--Low"      , "55"        -- units: °C
                   , "--High"     , "75"        -- units: °C
                   , "--low"      , "darkgreen"
                   , "--normal"   , "darkorange"
                   , "--high"     , "darkred"
                   ] 50
               , Run Battery
                   [ "--template" , "<acstatus>"
                   , "--Low"      , "25"        -- units: %
                   , "--High"     , "80"        -- units: %
                   , "--low"      , "darkred"
                   , "--normal"   , "darkorange"
                   , "--high"     , "darkgreen"
                   , "--" -- battery specific options
                             -- discharging status
                             , "-o"	, "<left>  "
                             -- AC "on" status
                             , "-O"	, "<left>  "
                             -- charged status
                             , "-i"	, "Full 󰂅 "
                   ] 50
               , Run Date "%a %d %b <fc=#8be9fd>%H:%M:%S</fc>" "date" 10
               ]
  , sepChar  = "%"
  , alignSep = "}{"
  , template = "%StdinReader% }{ %coretemp%  %battery%  %date% "
  }
