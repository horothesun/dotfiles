Config
  { overrideRedirect = False
  , font             = "xft:FiraMono Nerd Font:pixelsize=18:antialias=true:hinting=true"
  , bgColor          = "#202020"
  , fgColor          = "#f8f8f2"
  , position         = TopW L 97
  , persistent       = True
  , commands         =
      [ Run StdinReader
      , Run Cpu [ "-L", "3", "-H", "50", "--high", "red", "--normal", "green" ] 10
      , Run Memory [ "--template", "󰍛 <usedratio>%" ] 10
      -- , Run Swap [ "--template", " <usedratio>%" ] 20
      -- get wi-fi SSID by running: inxi --network-advanced
      , Run Wireless "wlp3s0" [ "--template", "<fc=#aaaaaa>󰖩 <essid> <quality>%</fc>" ] 40
      , Run DynNetwork
          [ "--template" , "<rx><fc=#aaaaaa>󰅀 </fc><tx><fc=#aaaaaa>󰅃 </fc>" -- unit: kB/s
          , "--Low"      , "300000"  -- units: B/s
          , "--High"     , "1500000" -- units: B/s
          , "--low"      , "darkgreen"
          , "--normal"   , "darkorange"
          , "--high"     , "darkred"
          ] 10
      , Run CoreTemp
          [ "--template" , "<core0><fc=#aaaaaa>󰔄</fc>"
          , "--Low"      , "55" -- units: °C
          , "--High"     , "75" -- units: °C
          , "--low"      , "darkgreen"
          , "--normal"   , "darkorange"
          , "--high"     , "darkred"
          ] 50
      , Run DiskU [ ("/", "<fc=#aaaaaa> <free></fc>") ] [] 60
      , Run Battery
          [ "--template" , "<acstatus>"
          , "--Low"      , "25" -- units: %
          , "--High"     , "60" -- units: %
          , "--low"      , "darkred"
          , "--normal"   , "darkorange"
          , "--high"     , "darkgreen"
          , "--" -- battery specific options
          , "-o"	 , "󰁹 <left>"  -- discharging status
          , "-O"	 , "  <left>" -- AC "on" status
          , "-i"	 , "󰂅 <left>"  -- charged status
          ] 50
      , Run Date "%a %d %b %H:%M:%S" "date" 10
      ]
  , sepChar  = "%"
  , alignSep = "}{"
  -- , template = "%StdinReader% }{ %dynnetwork%%wlp3s0wi%  %coretemp%  <fc=#aaaaaa>%memory% (%swap%)</fc>  %disku%  %battery%  %date% "
  , template = "%StdinReader% }{ %coretemp%  <fc=#aaaaaa>%memory%</fc>  %disku%  %wlp3s0wi%  %battery%  %date% "
  }
